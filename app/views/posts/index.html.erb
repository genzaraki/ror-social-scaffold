    <%= form_for(@post) do |form| %>
<div class="card">
  
  <div class="card-content">

      <div class="field ">
        <p class="control is-expanded">
          <%= form.text_area :content, id: :post_content, placeholder: 'Add New Post',class:"textarea" %>
        </p>      
      </div>
      <% if @post.errors.full_messages.any? %>
        <p class="help is-danger">
          <%= "Post could not be saved. #{@post.errors.full_messages.join('. ')}" %>
        </p>
      <% end %>
      <div class="field has-text-right">
        
          <p class="control">
            <%= form.submit 'Publish', class: 'button is-danger is-rounded is-small' %>
          </p>          
      </div>
      
  </div>
 

</div>
    <% end %>



<article class="timeline">
  <h3>
    Recent posts
  </h3>
  <ul class="posts">
    <%= render @timeline_posts %>
  </ul>
</article>
